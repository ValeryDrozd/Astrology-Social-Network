{
  "name": "astrology-social-network",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server"
    ],
    "nohoist": [
      "husky"
    ]
  },
  "repository": "https://github.com/ValeryDrozd/Astrology-Social-Network.git",
  "author": "Michael Medvediev <misha.medvedev2001@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "husky": "=4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "server/**/*.{ts,tsx}": [
      "yarn lint:server",
      "git add"
    ],
    "client/**/*.{ts,tsx}": [
      "yarn lint:client",
      "git add"
    ]
  },
  "scripts": {
    "test": " yarn test:client && yarn test:server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "yarn --cwd ./client build",
    "build:server": "yarn --cwd ./server build",
    "test:server": "yarn --cwd ./server test",
    "test:client": "yarn --cwd ./client test",
    "lint:server": "yarn --cwd ./server lint:write",
    "lint:client": "yarn --cwd ./client lint:write",
    "lint:all": "yarn lint:server . && yarn lint:client .",
    "lint": "yarn --cwd ./server lint . && yarn --cwd ./client lint .",
    "start": "yarn --cwd ./server start",
    "start:client": "yarn --cwd ./client start",
    "start:server": "yarn --cwd ./server start:dev"
  },
  "dependencies": {
    "typescript": "^4.2.3",
    "uuidv4": "^6.2.7"
  }
}
