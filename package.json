{
  "name": "astrology-social-network",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server"
    ],
    "nohoist": [
      "husky"
    ]
  },
  "repository": "https://github.com/ValeryDrozd/Astrology-Social-Network.git",
  "author": "Michael Medvediev <misha.medvedev2001@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "husky": "=4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test:server"
    }
  },
  "lint-staged": {
    "server/**/*.{ts,tsx}": [
      "yarn lint:server",
      "git add"
    ],
    "client/**/*.{ts,tsx}": [
      "yarn lint:client",
      "git add"
    ]
  },
  "scripts": {
    "test:server": "cd server && yarn test",
    "lint:server": "cd server && yarn lint:write",
    "lint:client": "cd client && yarn lint:write",
    "lint:all": "yarn lint:server . && yarn lint:client .",
    "lint": "cd server && yarn lint . && cd ../client && yarn lint .",
    "start:client": "cd client && yarn start",
    "start:server": "cd server && yarn start:dev"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "typescript": "^4.2.3",
    "uuidv4": "^6.2.7"
  }
}
